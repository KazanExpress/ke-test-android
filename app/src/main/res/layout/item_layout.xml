<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20sp"
    android:layout_marginBottom="20dp"
    >

    <!--
    <com.ke_test_app.testapplication.UI.Views.ActicleViewGroup
        android:id="@+id/avg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
        -->

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/grey"
        android:textSize="13sp"
        />

    <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_date"
        app:layout_constraintRight_toLeftOf="@id/iv_logo"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="13sp"
        />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintWidth_percent="0.6"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        android:textSize="16sp"
        />

    <ImageView
        android:id="@+id/iv_like_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/like"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_like_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toRightOf="@id/iv_like_pic"
        android:layout_margin="10dp"
        android:paddingEnd="10dp"
        />

    <ImageView
        android:id="@+id/iv_message_pic"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/message"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toRightOf="@id/tv_like_count"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_message_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toRightOf="@id/iv_message_pic"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/tv_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintLeft_toRightOf="@id/tv_message_count"
        android:layout_margin="10dp"
        android:paddingStart="10dp"
        />

    <ImageView
        android:id="@+id/iv_bookmark"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:src="@drawable/bookmark"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>